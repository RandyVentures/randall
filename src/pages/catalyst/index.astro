---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="Catalyst App"
      description="Support and privacy information for Catalyst Chain Reaction."
    />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <div class="hero-box">
          <p class="kicker">Project</p>
          <h1 class="hero-title">Catalyst Chain Reaction</h1>
          <p class="lead">
            Official support and privacy pages for the Catalyst iOS app submission.
          </p>
          <div class="hero-actions">
            <a class="button" href={import.meta.env.BASE_URL + 'catalyst/support'}>Support</a>
            <a class="button secondary" href={import.meta.env.BASE_URL + 'catalyst/privacy'}>Privacy Policy</a>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
