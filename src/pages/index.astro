---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const latest = posts.slice(0, 4);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero stagger">
				<p class="kicker">Daily notes</p>
				<h1>Building a quiet record of work, family, and the small systems that keep life moving.</h1>
				<p class="lead">
					I write short entries about coding, AI experiments, managing rentals, and whatever the kids are
					teaching me this week. Expect practical notes, quick lessons, and occasional rabbit holes.
				</p>
				<div class="hero-actions">
					<a class="button" href="/blog">Read the journal</a>
					<a class="button secondary" href="/about">About me</a>
				</div>
			</section>

			<section>
				<p class="section-title">Topics</p>
				<ul class="topic-list">
					<li>Coding & shipping</li>
					<li>AI experiments</li>
					<li>Rentals & operations</li>
					<li>Work notes</li>
					<li>Family & kids</li>
				</ul>
			</section>

			<section class="section-spaced">
				<p class="section-title">Latest entries</p>
				<ul class="post-list">
					{latest.map((post) => (
						<li class="post-item">
							<div class="post-meta">
								<FormattedDate date={post.data.pubDate} />
							</div>
							<a href={`/blog/${post.id}/`}>
								<h2 class="post-title">{post.data.title}</h2>
							</a>
							{post.data.description && <p class="post-excerpt">{post.data.description}</p>}
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
