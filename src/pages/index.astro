---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const latest = posts.slice(0, 4);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const withBase = (path: string) => `${base}${path}`;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero stagger">
				<div class="hero-box">
					<p class="kicker">Hi, welcome</p>
					<h1 class="hero-title">A running log of building, learning, and work in progress.</h1>
					<p class="lead">
						Short notes on coding, AI experiments, rentals, and work. I aim for clarity, not volume.
					</p>
					<div class="hero-actions">
						<a class="button" href={withBase('/blog')}>Posts</a>
						<a class="button secondary" href={withBase('/about')}>About</a>
					</div>
				</div>
			</section>

			<section class="section-spaced">
				<p class="section-title">Posts</p>
				<ul class="post-list">
					{latest.map((post) => (
						<li class="post-item">
							<div class="post-meta">
								<FormattedDate date={post.data.pubDate} />
							</div>
							<h2 class="post-title">{post.data.title}</h2>
							{post.data.description && <p class="post-summary">{post.data.description}</p>}
							<a class="post-link" href={withBase(`/blog/${post.id}/`)}>Read post</a>
						</li>
					))}
				</ul>
				<div style="margin-top: 1.5rem;">
					<a class="post-link" href={withBase('/blog')}>All posts â†’</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
