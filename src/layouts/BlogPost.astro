---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				padding: 3.5em 1em 5em;
			}
			article {
				display: grid;
				gap: 2.5rem;
			}
			.post-hero {
				display: grid;
				gap: 1.6rem;
				width: 100%;
				max-width: 980px;
				min-width: 0;
				margin: 0 auto;
				padding: 2.6rem;
				border-radius: 28px;
				border: 1px solid var(--line);
				box-sizing: border-box;
				background:
					radial-gradient(circle at 12% 20%, rgba(214, 106, 58, 0.18), transparent 45%),
					radial-gradient(circle at 92% 10%, rgba(76, 162, 178, 0.16), transparent 45%),
					rgba(255, 255, 255, 0.03);
				box-shadow: var(--shadow-1);
				animation: hero-rise 0.6s ease both;
			}
			.post-hero-text {
				display: grid;
				gap: 0.8rem;
				align-content: start;
				min-width: 0;
			}
			.hero-image {
				width: 100%;
				margin: 0;
				min-width: 0;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 20px;
				box-shadow: var(--shadow-1);
			}
			.deck {
				font-size: 1.15rem;
				color: var(--ink-muted);
				margin: 0;
			}
			.meta-row {
				display: flex;
				flex-wrap: wrap;
				gap: 0.75rem 1.4rem;
				align-items: center;
			}
			.prose {
				width: 100%;
				max-width: 100%;
				margin: 0;
				padding: 0;
				color: var(--ink);
				min-width: 0;
			}
			.post-body {
				width: 100%;
				max-width: 880px;
				min-width: 0;
				margin: 0 auto 4rem;
				padding: 2.4rem;
				border-radius: 26px;
				border: 1px solid var(--line);
				box-sizing: border-box;
				background: rgba(255, 255, 255, 0.02);
				box-shadow: var(--shadow-2);
			}
			.title {
				margin: 0;
				padding: 0;
				text-align: left;
				line-height: 1.1;
			}
			.title h1 {
				margin: 0.4rem 0 0.4rem;
			}
			.date {
				margin-bottom: 0;
				color: var(--ink-muted);
				text-transform: uppercase;
				letter-spacing: 0.14em;
				font-size: 0.8rem;
			}
			.last-updated-on {
				font-style: italic;
			}
			@media (min-width: 960px) {
				.post-hero {
					grid-template-columns: minmax(0, 1.05fr) minmax(0, 0.95fr);
					align-items: center;
				}
			}
			@media (max-width: 720px) {
				main {
					padding: 1.4em 0.9em 3em;
				}
				.post-hero {
					padding: 1.4rem;
					max-width: 100%;
				}
				.post-body {
					padding: 1.3rem;
					max-width: 100%;
				}
				.deck {
					font-size: 1rem;
				}
			}
			@keyframes hero-rise {
				from {
					opacity: 0;
					transform: translateY(14px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<section class="post-hero">
					<div class="post-hero-text">
						<div class="title">
							<div class="meta-row">
								<div class="date">
									<FormattedDate date={pubDate} />
								</div>
								{
									updatedDate && (
										<div class="last-updated-on">
											Last updated on <FormattedDate date={updatedDate} />
										</div>
									)
								}
							</div>
							<h1>{title}</h1>
						</div>
						{description && <p class="deck">{description}</p>}
					</div>
					<div class="hero-image">
						{heroImage && (
							<Image width={1020} height={510} src={heroImage} alt={title + ' - Hero Image'} />
						)}
					</div>
				</section>
				<section class="post-body">
					<div class="prose">
						<slot />
					</div>
				</section>
			</article>
		</main>
		<Footer />
	</body>
</html>
